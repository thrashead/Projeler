@using TDLibrary
@using Repository.UsersModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@{
    Users user = AppTools.User;
}

<div id="content">
    <div id="content-header">
        <div id="breadcrumb"> <a class="tip-bottom"><i class="icon-home"></i> Ana Sayfa</a></div>
    </div>

    <div class="container-fluid">
        <div class="quick-actions_homepage">
            <ul class="quick-actions">
                @{ if (user.HasRight("Category") && "Category".ShowType() == true)
                    {
                        <li class="bg_lb"> <a href="@AppMgr.AdminPath/Category"> <i class="icon-sitemap"></i> Kategoriler</a> </li>
                    } }
                @{ if (user.HasRight("Content") && "Content".ShowType() == true)
                    {
                        <li class="bg_lg"> <a href="@AppMgr.AdminPath/Content"> <i class="icon-edit"></i> İçerikler</a> </li>
                    } }
                @{ if (user.HasRight("Product") && "Product".ShowType() == true)
                    {
                        <li class="bg_ly"> <a href="@AppMgr.AdminPath/Product"> <i class="icon-barcode"></i> Ürünler</a> </li>
                    } }
                @{ if (user.HasRight("Gallery") && "Gallery".ShowType() == true)
                    {
                        <li class="bg_lo"> <a href="@AppMgr.AdminPath/Gallery"> <i class="icon-picture"></i> Galeri</a> </li>
                    } }
                @{ if (user.HasRight("Pictures") && "Pictures".ShowType() == true)
                    {
                        <li class="bg_ls"> <a href="@AppMgr.AdminPath/Pictures"> <i class="icon-camera-retro"></i> Resimler</a> </li>
                    } }
                @{ if (user.HasRight("Files") && "Files".ShowType() == true)
                    {
                        <li class="bg_lr"> <a href="@AppMgr.AdminPath/Files"> <i class="icon-file"></i> Dosyalar</a> </li>
                    } }
                @{ if (user.HasRight("Meta") && "Meta".ShowType() == true)
                    {
                        <li class="bg_lv"> <a href="@AppMgr.AdminPath/Meta"> <i class="icon-tags"></i> Meta</a> </li>
                    } }
                @{ if (user.HasRight("FormItems") && "FormItems".ShowType() == true)
                    {
                        <li class="bg_lb"> <a href="@AppMgr.AdminPath/FormItems"> <i class="icon-tasks"></i> Form Elemanları</a> </li>
                    } }
                @{ if (user.HasRight("LinkTypes") && "LinkTypes".ShowType() == true)
                    {
                        <li class="bg_lg"> <a href="@AppMgr.AdminPath/LinkTypes"> <i class="icon-link"></i> Bağlı Tipler</a> </li>
                    } }
                @{ if (user.HasRight("Translation") && "Translation".ShowType() == true)
                    {
                        <li class="bg_ly"> <a href="@AppMgr.AdminPath/Translation"> <i class="icon-globe"></i> Diller</a> </li>
                    } }
                @{ if (user.HasRight("Logs") && "Logs".ShowType() == true)
                    {
                        <li class="bg_lo"> <a href="@AppMgr.AdminPath/Logs"> <i class="icon-eye-open"></i> Loglar</a> </li>
                    } }
                @{ if (user.HasRight("Visitors") && "Visitors".ShowType() == true)
                    {
                        <li class="bg_ls"> <a href="@AppMgr.AdminPath/Visitors"> <i class="icon-plane"></i> Ziyaretci</a> </li>
                    } }
                @{ if (user.HasRight("Users") && "Users".ShowType() == true)
                    {
                        <li class="bg_lr"> <a href="@AppMgr.AdminPath/Users"> <i class="icon-user"></i> Kullanıcılar</a> </li>
                    } }
                @{ if (user.HasRight("Types") && "Types".ShowType() == true)
                    {
                        <li class="bg_lv"> <a href="@AppMgr.AdminPath/Types"> <i class="icon-pushpin"></i> Tipler</a> </li>
                    } }
            </ul>
        </div>
    </div>
</div>

