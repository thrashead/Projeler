@using TDLibrary

<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://
<html xmlns="http://www.w3.org/1999/xhtml">
<head>

    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=1" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black" />
    <meta http-equiv="Content-Type" content="text/html; charset=windows-1254" />
    <meta http-equiv="Content-Type" content="text/html; charset=iso-8859-9" />
    <meta http-equiv="Content-Type" content="text/html; charset=x-mac-turkish" />
    <title>tdControls by Sina SALIK</title>
    <script type="text/javascript" src="@AppMgr.MainPath/js/json2.js"></script>
    <script type="text/javascript" src="@AppMgr.MainPath/js/jquery-1.11.0.min.js"></script>

    @RenderSection("Scripts", required: false);

    <style type="text/css">
        body
        {
            width: 1000px;
            font-family: Arial;
            font-size: 14px;
        }

        pre
        {
            background-color: lightblue;
            border: 1px solid lightblue;
            width: 500px;
        }

        .tabheader
        {
            border: 1px solid blue;
            color: blue;
            padding: 5px;
            font-size: 24px;
            cursor: pointer;
            font-weight: bold;
            line-height: 40px;
        }

            .tabheader.selected
            {
                background-color: blue;
                color: #fff;
            }

            .tabheader:hover
            {
                background-color: lightblue;
            }

            .tabheader.selected:hover
            {
                background-color: blue;
            }

        .tab
        {
            display: none;
        }

            .tab.selected
            {
                display: block;
            }


        input:-webkit-autofill, input:focus:-webkit-autofill
        {
            -webkit-box-shadow: 0 0 0px 1000px white inset;
        }

        .note
        {
            float: left;
            margin: 10px 0px 30px 0px;
            color: red;
        }
    </style>
    <script type="text/javascript">
        $(document).ready(function () {
            /* Tabs */
            $("a.tabheader").click(function () {
                $("a.tabheader").removeClass("selected");
                $(this).addClass("selected");
                $(".tab").removeClass("selected");
                $(".tab[data-name='" + $(this).attr("data-name") + "']").addClass("selected");
            });
            /* Tabs */
        });

        function clearAutofill() {
            if (navigator.userAgent.toLowerCase().indexOf('chrome') >= 0) {
                $('input[autocomplete="off"]').each(function () {
                    $(this).val('');
                });
            }
        }

        setTimeout(clearAutofill, 500);

        (function (i, s, o, g, r, a, m) {
            i['GoogleAnalyticsObject'] = r; i[r] = i[r] || function () {
                (i[r].q = i[r].q || []).push(arguments)
            }, i[r].l = 1 * new Date(); a = s.createElement(o),
            m = s.getElementsByTagName(o)[0]; a.async = 1; a.src = g; m.parentNode.insertBefore(a, m)
        })(window, document, 'script', '//www.google-analytics.com/analytics.js', 'ga');

        ga('create', 'UA-73262463-6', 'auto');
        ga('send', 'pageview');

    </script>

</head>
<body>
    @RenderBody()
</body>
</html>
